const DEVELOPMENT = [
	{
		name: 'VS Code',
		description: 'IDE',
		href: 'https://code.visualstudio.com/',
		iconBgColour: '#2C2C32'
	},
	{
		name: 'Cursor AI',
		description: 'IDE',
		href: 'https://www.cursor.com/',
		iconBgColour: '#06A67F'
	},
	{
		name: 'Claude 3.5 Sonnet',
		description: 'LLM with Artifacts',
		href: 'https://claude.ai/',
		iconBgColour: '#06A67F'
	},
	{
		name: 'Postman',
		description: 'API Platform',
		href: 'https://www.postman.com/',
		iconBgColour: '#06A67F'
	},
	{
